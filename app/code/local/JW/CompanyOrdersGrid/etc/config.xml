<?xml version="1.0"?>
<config>    
    <modules>
        <JW_CompanyOrdersGrid>
            <version>1.0.0</version>
        </JW_CompanyOrdersGrid>
    </modules>    
    <global>
    	<blocks>
            <jw_companyordersgrid>
                <class>JW_CompanyOrdersGrid_Block</class>
            </jw_companyordersgrid>
            <adminhtml>
            	<rewrite>
            		<sales_invoice_grid>JW_CompanyOrdersGrid_Block_InvoiceGrid</sales_invoice_grid>
            	</rewrite>
            </adminhtml>
        </blocks>
        <helpers>
            <jw_companyordersgrid>
                <class>JW_CompanyOrdersGrid_Helper</class>
            </jw_companyordersgrid>
            <customer>
                <rewrite>
                    <address>JW_CompanyOrdersGrid_Helper_Address</address>
                </rewrite>
            </customer>
        </helpers>
  	</global>  
	<adminhtml>
		<events>
			<core_block_abstract_to_html_before>
				<observers>
					<jw_companyordersgrid>
						<type>singleton</type>
						<class>JW_CompanyOrdersGrid_Model_Observer</class>
						<method>beforeBlockToHtml</method>
					</jw_companyordersgrid>
				</observers>
			</core_block_abstract_to_html_before>	
			<sales_order_grid_collection_load_before>
				<observers>
					<jw_companyordersgrid>
						<class>JW_CompanyOrdersGrid_Model_Observer</class>
						<method>beforeCollectionLoad</method>
					</jw_companyordersgrid>
				</observers>
			</sales_order_grid_collection_load_before>
		</events>
	</adminhtml>  
</config>   